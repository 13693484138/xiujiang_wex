/* 弹出窗 */
.alert-content {
  width: 100%;
  height: 380rpx;
  box-sizing: border-box;
  background-color:#f9f9f9;
  position: fixed;
  bottom: 0rpx;
  z-index: 9999;
  font-size: 0;
  color: #010101;
  text-align: left;
  padding: 100rpx;
}
.alert-content-item{
  box-sizing: border-box;
  width: 100rpx;
  height: 50rpx;
  font-size: 27rpx;
  vertical-align: middle;
  text-align: center;
  margin-right: 50rpx;
  margin-bottom:50rpx; 
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.alert-content-item.active{
  color: white;
  background: black;
}
.alert-content-item text{
  display: inline-block;
  vertical-align: middle;
}
.alert-content-item::after{
  content:'';
  width:0;
  height:100%;
  display: inline-block;
  vertical-align: middle;
}
.alert-content-item:nth-child(4n){
  margin-right:0rpx; 
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
